head
  title Linque


body

  unless loaded
    +loading

  if currentUser
    +dashboard
  else
    +signIn

  
template( name="dashboard" )
  
  #toolbar
    .logo( flex left )
      img( src="/images/logo.svg" )
      
      
    .active.skills( layout vertical reverse center end-justified flex )
      each activeSkills
        +skill
        
      
  #board
    +pathway
      
  #statusbar
    .passive.skills( layout vertical reverse center end-justified flex )
      each passiveSkills
        +skill
        
    .user.user-login.user-signed-in( horizontal end-justified layout )
      +loginButtons
       

             

    
template( name="signIn")
  .user.user-login.user-signed-out( vertical flex center center-justified layout style="height: 100%" )
    img( class="pg-loading-logo" src="/images/logo.svg" )
    
    +loginButtons

    
template( name="user" )  
  
  .user( horizontal center-justified layout )
    .user-profile( relative title="Você está no nível #{level}" )
      img.user-picture( src="#{profile.picture}")
      span.user-level( fit )
        div.user-level-label Nível
        div.user-level-value #{level}


