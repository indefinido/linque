head
  title Linque


body
  
  div
  
    if currentUser
      with currentUser
        +dashboard
      
      +activities
      
      +levelup
    
    +loginButtons
    

template( name="dashboard" )
  
  #toolbar( horizontal center-justified layout )
    .container
      
      div( horizontal center around-justified layout )
  
        .skills( layout vertical reverse center end-justified flex )
          each skillsLeft
            +skill
  
        with currentUser
          +user
        
        .skills( layout vertical center start-justified flex )
          each skillsRight
            +skill
  
      br 
  
      .progress( layout vertical title="Pontos de Hábito (PH)" )
        div( layout horizontal end-justified )
          //- span.progress-label( title="Pontos de Hábito" ) PH
          span.progress-numbers 
            span.progress-current( title="Você tem #{levelExperience} PH" ) #{levelExperience}
            span.progress-required( title="São necessários #{requiredExperience} PH para ir para o próximo nível" ) /#{requiredExperience}
      
        paper-progress.progress-bar( flex value="#{percentage}" )
    
        div#earned-experience( hidden ) +#{earnedExperience}



template( name="user" )  
  
  .user( horizontal center-justified layout )
    .user-profile( relative title="Você está no nível #{level}" )
      img.user-picture( src="#{profile.picture}")
      span.user-level( fit )
        div.user-level-label Nível
        div.user-level-value #{level}
