template( name="skill" )
  
  .skill.skill-action( id="#{id}" )

    core-tooltip
    
      paper-button( class="button #{classes}" title="#{name}" touch-action="none" $dyn=attrs )
        img( src="/images/skills/#{id}_#{level}.svg" )
        .qualifier #{qualifier}

      div( tip )
        h2 #{name}
      
        +skillLevel(currentLevel)
        
        each nextSkillLevels
          +skillLevel
       