@import 'theme'

// for shadow in true false
//   user = shadow? 'html /deep/ .user' : '.user'

.user

  .user-profile
    rounded()
    border 4px solid pathColor
    height 168px
    width 168px

  .user-picture
  .user-circle
    rounded()

    border 4px solid #FFF
  
    height 160px
    width 160px
    
  linque-dot.vivid &
    .user-picture
    .user-circle
      border-color vividColor
    
  &.user-login

    .pg-loading-logo
      padding 1em

    #login-buttons
      a
        text-decoration none
      .accounts-dialog
        left -93px
  
    &.user-signed-in
      font-size 0.8em

      #login-buttons
        a.login-link-text
          color #FFF          
        .accounts-dialog
          left -143px
          top -74px
      
    
    &.user-signed-out
      background-color transparent

      #login-buttons
        margin-top 0.25em
        padding 1em
        background-color white
        border-radius 4px
      
        a
          color backgroundColor
          font-size 1em
          text-decoration none
          
        .accounts-dialog
          left -93px
        
      
      
    
  
  
  
+mobile()

  .user

    .user-profile
      height 138px
      width 138px

    .user-picture
    .user-circle
      height 130px
      width 130px