@import 'theme'
@import 'nib'



track-button
  z-index 1
    
  for shadow, i in true false
    
    { (' /deep/' '&')[i] }
      core-tooltip
        height 100%
        width 100%
            

      #icon
        height 100%
        width  100%
  

.track

  &.track-action

    .button
      border-radius 4px
      box-sizing border-box
      color #FFF
      margin 0.5em 0
      padding 7px
      background-color rgba(#FFF,0.15)

      // TODO use 'em'
      height 90px
      width 90px
     
      
      &.locked
        cursor default
    
        
        
    for shadow, i in true false
      { ('& /deep/' '&')[i] }
        .core-tooltip
          background-color dialogContentColor
          box-shadow 0 2px 2px 0 rgba(0, 0, 0, 0.2), 0 6px 10px 0 rgba(0, 0, 0, 0.3)
          font-size 1em
          line-height 1.2em
          padding 0
          white-space normal
          transition visibility 0 1s
      
          &:not(.show)
            transition visibility 0 0.5s
      
          &::after
            border 8px solid transparent
        
          &.bottom::after
            border-bottom-color dialogHeaderColor
            left calc(50% - 8px)

    
      
  for shadow, i in true false
    
    { ('html /deep/ &' '&')[i] }
    
      &.track-info
        
        .track-icon
          color #FFF
          height 100px
          width 100px
    
        .track-name
          color rgba(#FFF, 0.6)
          font-size 1.1em
          font-weight bold
          upcase()


  &.track-info.track-complete
    color #000
    width 320px
    
    .track-name
      background-color dialogHeaderColor
      border-radius top 4px
      color rgba(#000, 0.6)
      font-size 1em
      line-height 1em
      

