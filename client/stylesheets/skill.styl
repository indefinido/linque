@import 'theme'
@import 'nib'


skill-button

  core-tooltip
    height 100%
    width 100%

  #icon
    margin auto
    height 75%
    width  75%
  
skill-button /deep/

  core-tooltip
    height 100%
    width 100%
  
  #icon
    margin auto
    height 75%
    width  75%


.skills
  position relative
  width 100%



.skill

  &.skill-action

    .button
      border-radius 4px
      box-sizing border-box
      color #FFF
      margin 0.5em 0
      padding 7px

      &.active
    
        background-color rgba(#FFF,0.15)
      
        height 90px
        width 90px
      
      &.passive
      
        background-color transparent
        cursor default
      
        height 60px
        width 60px
      
      &.locked
      
        cursor default
        opacity 0.15
        
      .qualifier
        
        bottom 0
        left 0
        font-size 0.6em
        position absolute
        text-align center
        text-transform lowercase
        width 100%
      
      
  for shadow in true false
    selector = shadow ? 'html /deep/ &.skill-info' : '&.skill-info'
    
    {selector}
      text-align center
      
      &.skill-levelup
        background-color blueLabelColor
        border-radius 4px
        padding 1.5em
  
      .skill-icon
        color #FFF
        height 100px
        width 100px
    
      .skill-name
        color rgba(#FFF, 0.6)
        font-size 1.1em
        font-weight bold
        upcase()
      
      .skill-qualifier
        color rgba(#FFF, 0.9)
        font-size 1.3em
        font-weight 300
        // line-height 0.8em
        downcase()


